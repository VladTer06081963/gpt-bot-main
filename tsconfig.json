{
  "compilerOptions": {
    "target": "ES6", // Компиляция кода в ES6
    "module": "commonjs", // Используем CommonJS для модулей
    "outDir": "public", // Папка для скомпилированных JS файлов
    "strict": true, // Включаем строгую типизацию
    "esModuleInterop": true, // Совместимость с ES модулями
    "skipLibCheck": true // Пропустить проверку типов в библиотеках
  },
  "include": ["./**/*.ts"], // Включаем все TS файлы
  "exclude": ["node_modules"] // Исключаем папку node_modules
}


